{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
			    <div class="form-group">
    				<label class="control-label col-sm-2" for="username">
    					{{ 'resetting.request.username'|trans }}
    				</label>
    				<div class="col-sm-10">
			        	<input type="text" id="username"  class="form-control"  name="username" required="required" />
			        </div>
			    </div>
			    <div class="form-group">
    				<div class="col-sm-offset-2 col-sm-10">
			        	<input type="submit" class="btn btn-default" value="{{ 'resetting.request.submit'|trans }}" />
			    	</div>
			    </div>
			</form>
		</div>
	</div>
</div>


